            <option value="22.5">10:30pm</option>
            <option value="23.0">11:00pm</option>
            <option value="23.5">11:30pm</option>
        </select><br>
        <p style="color:#F39B6D;"> <%= end %></p>

        <label for="jobSelector">Select Job:</label>
        <select id="jobSelector" name="jobSelector">
            <%- jobs %>
        </select><br><br>
        <p style="color:#F39B6D;"> <%= noJob %></p>

        <input type="hidden" id="type" name="type" value="addEvent">
        <button type="submit" id="createEvent">Create Event</button>
    </fieldset>
</form>
</body>
</html>
